<Window x:Class="Projet_Mines_Official.Rapport_PR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Mines_Official"
        mc:Ignorable="d"
        Title="Rapport_PR" Height="450" Width="800">
        <StackPanel>
        <Border Style="{StaticResource RapportContainer}">
            <DockPanel>
                <TextBlock
                Text="Bon D'achat"
                VerticalAlignment="Center"/>
                <Button Name="BonAchat"
                        Content="Générer"
                        Style="{StaticResource RapportBtn}"
                    Click="BonAchat_Click"/>
            </DockPanel>
        </Border>
        <Border Style="{StaticResource RapportContainer}">
            <DockPanel>
                <TextBlock
                Text="le bulltain de versement"
                VerticalAlignment="Center"/>
                <Button Name="BultainVersement"
                        Content="Générer"
                        Style="{StaticResource RapportBtn}"
                    Click="BultainVersement_Click"/>
            </DockPanel>
        </Border>
    </StackPanel>
</Window>
