                    IsReadOnly="True"/>
                <Button x:Name="AfficherExPermis"
                        Grid.ColumnSpan="2"
                        Content="Afficher Ex Permis"
                        Grid.Column="7"
                        Grid.Row="1"
                        Click="AfficherExPermis_Click"/>
            </Grid>
            <!--Les informations de Demande-->
            <!--Les informations de Demande-->
            <Grid Height="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
